<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layoutDirection="ltr"
    tools:context=".Set">

    <TextView
        android:id="@+id/setNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Large"
        android:gravity="center" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Large"
        android:gravity="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        ****<LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/to1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="timeout1"
                    android:text="Timeout" />

                <Button
                    android:id="@+id/sanctions1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="addSanction1"
                    android:text="Sanctions" />
            </LinearLayout>

            <TextView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/points1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0" />

            <TextView
                android:id="@+id/set1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/to2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="timeout2"
                    android:text="Timeout" />

                <Button
                    android:id="@+id/sanctions2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="addSanction2"
                    android:text="Sanctions" />
            </LinearLayout>

            <TextView
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/points2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="0" />

            <TextView
                android:id="@+id/set2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <RadioButton
            android:clickable="false"
            android:id="@+id/serve1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/p15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V" />

                <Button
                    android:id="@+id/p14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IV" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/p16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VI" />

                <Button
                    android:id="@+id/p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="III" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/p11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I" />

                <Button
                    android:id="@+id/p12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="II" />
            </TableRow>
        </TableLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/p22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="II" />

                <Button
                    android:id="@+id/p21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I" />
            </TableRow>



            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/p23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="III" />

                <Button
                    android:id="@+id/p26"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VI" />
            </TableRow>

            <TableRow
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/p24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IV" />

                <Button
                    android:id="@+id/p25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V" />
            </TableRow>
        </TableLayout>

        <RadioButton
            android:clickable="false"
            android:id="@+id/serve2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:text="Serve" />
    </LinearLayout>

    <Button
        android:id="@+id/startSet"
        android:onClick="startSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start set" />

    <Button
        android:id="@+id/undo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Undo"
        android:onClick="undoActions"/>
</LinearLayout>